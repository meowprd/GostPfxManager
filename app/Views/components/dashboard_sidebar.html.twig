{% import "macros/SvgLogo.html.twig" as SvgLogo %}
{% import "macros/Button.html.twig" as Button %}
{% import "macros/Sidebar.html.twig" as Sidebar %}

{% set header %}
    {{ SvgLogo.Logo('h-8') }}
    <span class="text-heading-3 font-heading-3 text-default-font text-xs">{{ APP_NAME }}</span>
{% endset %}

{% set list %}
    <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>

        <a href="/dashboard" class="w-full">Список сертификатов</a>
    </div>
{% endset %}

{% set upload %}
    <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>

        <a href="/dashboard/upload" class="w-full">Загрузка сертификата</a>
    </div>
{% endset %}


{{
Sidebar.sidebar(
    header,
    Button.Button({
        children: "Выход",
        variant: 'destructive-secondary',
        onClick: 'location.href="/logout"'
    }),
    Sidebar.nav_item(active == 'list', list) ~
    Sidebar.nav_item(active == 'upload', upload)
)
}}
